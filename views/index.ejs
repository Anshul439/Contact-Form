<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS for the form -->
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="contact.css">
    <link rel="stylesheet" href="mail.js">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/firebase/7.14.1-0/firebase.js"></script>


</head>

<body>

<!-- <div class="bg"> -->
    <div class="bg">
    <div class="container">
        <form method="post" action="/contact" id="contactForm">

            <h1>Contact</h1>
            <br>
            <br>
            <div class="alert">Your response was saved</div>

            <div class="inputBox">
                <label>Name:</label>
                <input type="text" id="name" name="name" placeholder="Your name" />
            </div>

            <div class="inputBox">
                <label>Email:</label>
                <input type="email" id="emailid" name="email" placeholder="Your Email" />
            </div>

            <div class="inputBox">
                <label>Phone Number:</label>
                <input type="text" id="msgContent" placeholder="Your Phone Number"></input>
            </div>

            <div class="inputBox">
                <label>Address:</label>
                <input type="text" id="msgContent" placeholder="Your Address"></textarea>
            </div>

            <div class="inputBox">
                <label>Query:</label>
                <textarea id="msgContent" placeholder="Query"></textarea>
            </div>

            <div class="inputBox submit">
                <button  type="submit">Submit</button>
            </div>
        </form>
    </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/firebase/7.14.1-0/firebase.js"></script>
    <script src="./mail.js"></script>
</body>

</html>